<div
	role="region"
	class="mcq-inner component-inner"
	aria-label="{{_globals._components._mcq.ariaRegion}}"
	{{#if _globals._components._mcq.ariaRegion}}tabindex="0"{{/if}}
>
	{{> component this}}
	<div
		class="
			mcq-widget
			component-widget
			{{#unless _isEnabled}}
				disabled
				{{#if _isInteractionComplete}}
					complete
					submitted
					show-user-answer
					{{#if _isCorrect}} correct{{/if}}
				{{/if}}
			{{/unless}}
		"
	>
		{{#each _items}}
		<div
			class="
				mcq-item
				component-item
				item-{{@index}}
				component-item-color
				{{#unless ../_isEnabled}}
					{{#if _isCorrect}}
						correct
					{{else}}
						incorrect
					{{/if}}
				{{/unless}}
			"
		>
			<input
				type="checkbox"
				id="{{../_id}}-{{@index}}"
				aria-label="{{a11y_normalize text}}"
				aria-labelledby="{{../_id}}-{{@index}}-aria"{{#unless ../_isEnabled}}disabled{{/unless}}
			/>
			<label
				class="
					component-item-border
					component-item-text-color
					{{#if _isSelected}} selected {{/if}}
					{{#unless ../_isEnabled}} disabled {{/unless}}
				"
				aria-hidden="true"
				for="{{../_id}}-{{@index}}"
				id="{{../_id}}-{{@index}}-aria"
			>
				<div class="mcq-item-state">
					<div class="
						icon
						mcq-item-icon
						mcq-answer-icon
						{{#if ../_isRadio}}
							radio
						{{else}}
							checkbox
						{{/if}}
						component-item-text-color
					"></div>
					<div class="mcq-item-icon mcq-correct-icon icon icon-tick"></div>
					<div class="mcq-item-icon mcq-incorrect-icon icon icon-cross"></div>
				</div>
				<div class="mcq-item-inner h5">
					{{{text}}}
				</div>
			</label>
		</div>
		{{/each}}
	</div>
	<div class="buttons">
	</div>
</div>
